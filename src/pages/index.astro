---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="GZen Gaming - Your Cross-Platform Gaming Playground">
  <div class="container mx-auto px-4">
    <!-- Hero Section -->
    <section class="py-20 text-center">
      <h1 class="text-6xl font-black mb-6 bg-gradient-to-r from-game-accent via-game-secondary to-game-accent bg-clip-text text-transparent animate-gradient">
        Welcome to GZen Gaming
      </h1>
      <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
        A cross-platform gaming playground hosting games built with Flutter and Godot.
        Play anywhere, anytime.
      </p>
      <div class="flex gap-4 justify-center">
        <a href="/games" class="px-8 py-3 bg-game-accent text-game-dark font-bold rounded-lg hover:bg-game-accent/90 transition">
          Browse Games
        </a>
        <a href="/about" class="px-8 py-3 border border-game-accent text-game-accent font-bold rounded-lg hover:bg-game-accent/10 transition">
          Learn More
        </a>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-16">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="p-6 bg-gray-900/50 rounded-lg border border-gray-800 hover:border-game-accent transition">
          <div class="text-4xl mb-4">ðŸŽ®</div>
          <h3 class="text-xl font-bold mb-2">Cross-Platform</h3>
          <p class="text-gray-400">Play on web, mobile, or desktop. One game, everywhere.</p>
        </div>

        <div class="p-6 bg-gray-900/50 rounded-lg border border-gray-800 hover:border-game-secondary transition">
          <div class="text-4xl mb-4">âš¡</div>
          <h3 class="text-xl font-bold mb-2">Instant Play</h3>
          <p class="text-gray-400">No downloads, no installs. Click and play immediately.</p>
        </div>

        <div class="p-6 bg-gray-900/50 rounded-lg border border-gray-800 hover:border-game-accent transition">
          <div class="text-4xl mb-4">ðŸš€</div>
          <h3 class="text-xl font-bold mb-2">Modern Tech</h3>
          <p class="text-gray-400">Built with Flutter & Godot for smooth gameplay.</p>
        </div>
      </div>
    </section>

    <!-- Coming Soon Section -->
    <section class="py-16 text-center">
      <h2 class="text-3xl font-bold mb-4">More Games Coming Soon</h2>
      <p class="text-gray-400 mb-8">We're building something amazing. Stay tuned!</p>
    </section>
  </div>
</BaseLayout>

<style>
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .animate-gradient {
    background-size: 200% auto;
    animation: gradient 3s linear infinite;
  }
</style>
